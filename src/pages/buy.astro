---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import Button from '../components/ButtonCompra';
---

<html lang="en">
	<head>
		<MainHead title="About | Alberto Millán" description="About Alberto Millán Lorem Ipsum" />
		<style>
			.heroImg {
				max-height: 24rem;
				object-fit: cover;
				overflow: hidden;
				opacity: 1.0;
			}

			.heroImg img {
				width: 100%;
			}

			.gradiente,
			.gradiente2 {
				background-image: url('/assets/mesh-gradient.jpg');
				background-size: cover;
				pointer-events: none;
				mix-blend-mode: screen;
				opacity:0.3;
				width: 100%;
				height: 100%;
				position:absolute;
				top: 0;
				left: 0;
				z-index: 2;
			}

			.gradiente2 {
				mix-blend-mode: multiply;
				background-size: cover;
			}	

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
				margin-top: 4em;
			}

			.wrapper.bio {
				max-width: 50em;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div >
	    
		</div>
		<Footer />
	</body>
</html>
